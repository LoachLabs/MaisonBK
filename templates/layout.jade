doctype html
html(lang='en')
  head
    meta(charset='utf-8')
    meta(http-equiv='X-UA-Compatible', content='IE=edge')
    meta(name='viewport', content='width=device-width, initial-scale=1')
    meta(name='description', content='#{description}')
    meta(name='author', content='#{author}')
    link(href="/main.css" media="all" rel="stylesheet" type="text/css")
    title #{title}
  body#about.index(data-spy="scroll", data-target="#navbar", data-offset="200")
    nav.navbar.navbar-default.navbar-fixed-top(role='navigation')
      .container
        .navbar-header.page-scroll
          button.navbar-toggle.collapsed(type='button', data-toggle='collapse', data-target='#navbar')
            span.sr-only Toggle navigation
            span.icon-bar
            span.icon-bar
            span.icon-bar
          a.navbar-brand(href='./') #{title}

        #navbar.collapse.navbar-collapse
          ul.nav.navbar-nav.navbar-right
            block navigation
              each item, i in nav
                li
                  a.page-scroll(href="#{item.url}" title="#{item.title}") #{item.name}

    header#carousel.carousel.slide(data-ride="carousel")
      ol.carousel-indicators
        each item, i in header
          li(class=i == 0 ? 'active' : '', data-target='#carousel', data-slide-to='#{i}')
      .carousel-inner
        each item, i in header
          .item(class=i == 0 ? 'active' : '')
            .fill(style="background-image:url('#{item.img}');")
            .carousel-caption
              h2 #{item.caption}
      a.left.carousel-control(href='#carousel', data-slide='prev')
        span.icon-prev
      a.right.carousel-control(href='#carousel', data-slide='next')
        span.icon-next

    block contents
      .container
        .row
          .col-md-12
            !{contents}

    section.banner#contact
      .container
        .row
          .col-lg-8
            h2 Connect with MaisonBK:
          .col-lg-4
            ul.list-inline.banner-social-buttons
              each item, i in social
                li
                  a.btn.btn-default.btn-lg(href='#{item.url}')
                    i(class="fa fa-#{item.icon} fa-fw")
                    span.network-name #{item.name}

    footer
      .container
        .row
          .col-md-6
            span.copyright.text-muted Copyright &copy; Maison BK 2015
          .col-md-6.text-right
            ul.list-inline.quicklinks
              block navigation

    script(src='main.js')
